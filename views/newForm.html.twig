{% extends "layout.html.twig" %}
{#mettre le contenue de la page dans les balises block#}

{% block content %}
    {#notifications#}
    {% for message in app.session.getFlashBag.get('notice') %}
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('warning') %}
        <div class="alert alert-warning alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.getFlashBag.get('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            {{ message }}
        </div>
    {% endfor %}
    {{ form_start(form) }}

        {% for input in form %}
            <tr>
                <td>{{ form_label(input) }}</td>
                <td>{{ form_widget(input) }}</td>
            </tr>
        {% endfor %}

    {{ form_widget(form) }}
    <hr>
    <input type="submit" name="submit" class="btn btn-lg btn-success float-lg-right"/>
    {{ form_end(form) }}
{% endblock %}
